<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="AppTheme.Green">
        <item name="colorButtonNormal">@color/colorButton</item>
    </style>

    <style name="Teamtext">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/team_text_color</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!--style for score text -->
    <style name="scoretext">
        <item name="android:layout_marginBottom">@dimen/margin24</item>
        <item name="android:layout_marginTop">@dimen/margin16</item>
        <item name="android:textSize">56sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/futuraltcondensed</item>
    </style>
    <!--style for fault text -->
    <style name="faulttext">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/futuraltcondensed</item>
    </style>

    <!--style for header text -->
    <style name="header">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin16</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!--style for team logo-->
    <style name="team_image">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <!--style for goal button -->
    <style name="goal">
        <item name="android:layout_marginBottom">@dimen/margin8</item>
        <item name="android:layout_marginLeft">@dimen/margin24</item>
        <item name="android:layout_marginRight">@dimen/margin24</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:theme">@style/AppTheme.Green</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--style for foul button -->
    <style name="foul">
        <item name="android:textAllCaps">true</item>
        <item name="android:theme">@style/AppTheme.Green</item>
    </style>
    <!--style for RESET button -->
    <style name="reset">
        <item name="android:gravity">center</item>
        <item name="android:theme">@style/AppTheme.Green</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/margin32</item>
    </style>


</resources>
